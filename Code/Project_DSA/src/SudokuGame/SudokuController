package SudokuGame;

class SudokuController {
    private SudokuGameModel model;
    private SudokuGameView view;
    
    public SudokuController(SudokuGameModel model, SudokuGameView view) {
        this.model = model;
        this.view = view;
        setupEventHandlers();
    }
    
    private void setupEventHandlers() {
        // Additional controller logic can be added here
        // Most event handling is done directly in the view for simplicity
    }
    
    public void handleCellInput(int row, int col, int value) {
        if (model.getGameState() == SudokuGameModel.GameState.PLAYING) {
            boolean validMove = model.makeMove(row, col, value);
            
            if (!validMove && value != 0) {
                JTextField cell = view.getCell(row, col);
                if (cell != null) {
                    cell.setBackground(Color.RED);
                    Timer timer = new Timer(500, e -> view.updateDisplay());
                    timer.setRepeats(false);
                    timer.start();
                }
            }
            
            view.updateDisplay();
        }
    }
}