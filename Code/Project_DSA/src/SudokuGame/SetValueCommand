package SudokuGame;

class SetValueCommand implements SudokuCommand {
    private SudokuGameModel model;
    private int row, col;
    private int oldValue, newValue;
    
    public SetValueCommand(SudokuGameModel model, int row, int col, int oldValue, int newValue) {
        this.model = model;
        this.row = row;
        this.col = col;
        this.oldValue = oldValue;
        this.newValue = newValue;
    }
    
    @Override
    public void execute() {
        model.getCell(row, col).setValue(newValue);
    }
    
    @Override
    public void undo() {
        model.getCell(row, col).setValue(oldValue);
    }
}